<h2>Books Table</h2><br>
<table class="table" align="center">
  <thead>
    <tr>
      <th>ID</th>  
      <th>Name</th>
      <th>Author</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(s=> { %>
      <tr>
        <td>
            <%= s._id %>
          </a>
        </td>
        <td>
          <%= s.Name %>
        </td>
        <td>
          <%= s.Author %>
        </td>
        <td>
          <a href="<%= `edit/${s._id}` %>"
            onclick="return confirm('Are you sure you want to edit this record?')">Edit</a>
        </td>
        <td>
          <a href="delete/<%= `${s._id}` %>"
            onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>